<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5.6sp"
            android:text="@string/add_phone_numbers_title"
            android:textColor="@color/medium_green"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/gray14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.143" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField1"
            android:layout_width="160.7dp"
            android:layout_height="25dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            android:layout_marginStart="17.3dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSelectMultiImg"
            app:layout_constraintStart_toEndOf="@+id/tvSelectMultiImg"
            app:layout_constraintTop_toTopOf="@+id/tvSelectMultiImg" />


    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField2"
            android:layout_width="160.7dp"
            android:layout_height="25dp"
            android:layout_marginStart="17.3dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/tvPassword"
            app:layout_constraintStart_toEndOf="@+id/tvPassword"
            app:layout_constraintTop_toTopOf="@+id/tvPassword" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etMailServer"
            android:layout_width="160.7dp"
            android:layout_height="25dp"
            android:layout_marginStart="17.3dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone3"
            app:layout_constraintStart_toEndOf="@+id/tvPhone3"
            app:layout_constraintTop_toTopOf="@+id/tvPhone3" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etMailServerPort"
            android:layout_width="160.7dp"
            android:layout_height="25dp"
            android:layout_marginStart="17.3dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:ems="12"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="center"
            android:textDirection="ltr"
            android:textSize="14.7sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone4"
            app:layout_constraintStart_toEndOf="@+id/tvPhone4"
            app:layout_constraintTop_toTopOf="@+id/tvPhone4" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendCommand"
            android:layout_width="90dp"
            android:layout_height="31.7dp"
            android:background="@color/green1"
            android:lineSpacingExtra="-9.9sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18.7sp"
            app:layout_constraintEnd_toEndOf="@+id/etMailServer"
            app:layout_constraintTop_toTopOf="@+id/btnCancel" />

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="90dp"
            android:layout_height="31.7dp"
            android:background="@color/red4"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18.7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvSelectMultiImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.905" />

    <TextView
            android:id="@+id/tvSelectMultiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_1"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.090"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.150" />

    <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_2"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            android:layout_marginTop="32.3dp"
            app:layout_constraintStart_toStartOf="@+id/tvSelectMultiImg"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectMultiImg" />

    <TextView
            android:id="@+id/tvPhone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_3"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            android:layout_marginTop="32.3dp"
            app:layout_constraintStart_toStartOf="@+id/tvPassword"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword" />

    <TextView
            android:id="@+id/tvPhone4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32.3dp"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_4"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintStart_toStartOf="@+id/tvPhone3"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone3" />


</androidx.constraintlayout.widget.ConstraintLayout>