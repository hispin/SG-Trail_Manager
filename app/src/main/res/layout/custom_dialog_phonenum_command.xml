<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommandTitle"
            style="@style/commands_emails_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/arialmt"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5.6sp"
            android:text="@string/emails_title"
            android:textColor="@color/medium_green"
            android:textSize="15.3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etField1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/edit_text_border"
            android:hint="0000000000"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCommandTitle"
            app:mask="###-#######" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etField2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_border"
            android:hint="0000000000"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etField1"
            app:mask="###-#######" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etField3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_border"
            android:hint="0000000000"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etField2"
            app:mask="###-#######" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etField4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_border"
            android:hint="0000000000"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etField3"
            app:mask="###-#######" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/green1"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/send_command"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14.7sp"
            app:layout_constraintStart_toEndOf="@+id/btnCancel"
            app:layout_constraintTop_toBottomOf="@+id/etField4" />

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@color/orange"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14.7sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnSendCommand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnSendCommand" />
</androidx.constraintlayout.widget.ConstraintLayout>