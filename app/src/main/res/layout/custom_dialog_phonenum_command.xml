<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/arialmt"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5.6sp"
            android:text="@string/add_phone_num_title"
            android:textColor="@color/medium_green"
            android:textSize="15.3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone1"
            app:layout_constraintStart_toEndOf="@+id/tvPhone1"
            app:layout_constraintTop_toTopOf="@+id/tvPhone1" />


    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone2"
            app:layout_constraintStart_toEndOf="@+id/tvPhone2"
            app:layout_constraintTop_toTopOf="@+id/tvPhone2" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789+-"
            android:imeOptions="actionDone"
            android:ems="12"
            android:inputType="phone"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="14.7sp"
            android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhone3"
            app:layout_constraintStart_toEndOf="@+id/tvPhone3"
            app:layout_constraintTop_toTopOf="@+id/tvPhone3" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/green1"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/send_command"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14.7sp"
            app:layout_constraintStart_toEndOf="@+id/btnCancel"
            app:layout_constraintTop_toBottomOf="@+id/etField3" />

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@color/orange"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14.7sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnSendCommand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnSendCommand" />

    <TextView
            android:id="@+id/tvPhone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_1"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCommandTitle" />

    <TextView
            android:id="@+id/tvPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_2"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone1" />

    <TextView
            android:id="@+id/tvPhone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/phone_num_3"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone2" />


</androidx.constraintlayout.widget.ConstraintLayout>