<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="306.7dp"
        android:layout_height="400dp"
        android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialmt"
            android:gravity="center_horizontal"
            android:text="@string/emails_title"
            android:textColor="@color/medium_green"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/gray14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.143" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField1"
            style="@style/commands_emails_fields"
            android:layout_width="160.7dp"
            android:ems="10"
            android:layout_marginStart="17.3dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail1"
            app:layout_constraintStart_toEndOf="@+id/tvEmail1"
            app:layout_constraintTop_toTopOf="@+id/tvEmail1" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField2"
            style="@style/commands_emails_fields"
            android:layout_width="160.7dp"
            android:layout_marginStart="17.3dp"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail2"
            app:layout_constraintStart_toEndOf="@+id/tvEmail2"
            app:layout_constraintTop_toTopOf="@+id/tvEmail2" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField3"
            style="@style/commands_emails_fields"
            android:layout_width="160.7dp"
            android:layout_marginStart="17.3dp"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail3"
            app:layout_constraintStart_toEndOf="@+id/tvEmail3"
            app:layout_constraintTop_toTopOf="@+id/tvEmail3" />


    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etField4"
            style="@style/commands_emails_fields"
            android:layout_width="160.7dp"
            android:layout_marginStart="17.3dp"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail4"
            app:layout_constraintStart_toEndOf="@+id/tvEmail4"
            app:layout_constraintTop_toTopOf="@+id/tvEmail4" />

    <TextView
            android:id="@+id/tvEmail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/email1"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.150" />

    <TextView
            android:id="@+id/tvEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/email2"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            android:layout_marginTop="42.3dp"
            app:layout_constraintStart_toStartOf="@+id/tvEmail1"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail1" />

    <TextView
            android:id="@+id/tvEmail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/email3"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            android:layout_marginTop="42.3dp"
            app:layout_constraintStart_toStartOf="@+id/tvEmail2"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail2" />

    <TextView
            android:id="@+id/tvEmail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/email4"
            android:textColor="@color/black"
            android:textSize="14.7sp"
            android:layout_marginTop="42.3dp"
            app:layout_constraintStart_toStartOf="@+id/tvEmail3"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail3" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendCommand"
            android:layout_width="90dp"
            android:layout_height="31.7dp"
            android:background="@color/medium_green"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18.7sp"
            app:layout_constraintEnd_toEndOf="@+id/etField4"
            app:layout_constraintTop_toTopOf="@+id/btnCancel" />

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="90dp"
            android:layout_height="31.7dp"
            android:background="@color/red4"
            android:fontFamily="@font/arialmt"
            android:lineSpacingExtra="-9.9sp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18.7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEmail1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.905" />
</androidx.constraintlayout.widget.ConstraintLayout>